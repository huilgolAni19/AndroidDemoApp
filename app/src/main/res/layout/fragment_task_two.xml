<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.tasktwo.TaskTwoFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fab_margin"
        android:id="@+id/buttonStartLocation"
        android:text="Start Service"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Stop Service"
        android:visibility="gone"
        android:layout_below="@id/buttonStartLocation"
        android:id="@+id/buttonStopService"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonShowLocations"
        android:layout_centerHorizontal="true"
        android:text="Show Locations"
        android:layout_below="@id/buttonStopService"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCount"
        android:padding="@dimen/fab_margin"
        android:text="Total Row 0"
        android:layout_marginTop="@dimen/fab_margin"
        android:textStyle="bold"
        android:layout_below="@id/buttonShowLocations"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewCount"
        android:id="@+id/recycleViewLocation"
        android:layout_marginTop="@dimen/fab_margin"/>

</RelativeLayout>